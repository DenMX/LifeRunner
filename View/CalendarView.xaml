                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
        <Border Grid.Row="3" >
            <Grid>
                <TextBlock Text="{Binding Days[12].sDay}"/>
                <ListBox ItemsSource="{Binding Days[12].Tasks}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
