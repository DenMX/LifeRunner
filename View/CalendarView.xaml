                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            
        </Border>
        <Border Grid.Row="2" Grid.Column="2" >
            <Grid>
                <TextBlock Text="{Binding Days[10].sDay}"/>
                <ListBox ItemsSource="{Binding Days[10].Tasks}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
